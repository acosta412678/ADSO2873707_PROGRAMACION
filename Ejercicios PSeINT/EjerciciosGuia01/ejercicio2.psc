	// 2) Hacer un algoritmo que lea dos números enteros A y B y muestre el doble de su suma. 
	Definir numero1 Como Real; //DEFINICIÓN vbles
	Definir numero2, resultado Como Real; //DEFINICIÓN vbles
	Escribir "Digite el valor del numero 1";
	Leer numero1; // ENTRADA
	Escribir "Digite el valor del numero 2";
	Leer numero2; // ENTRADA
	resultado <- (numero1+numero2)*2;
	Escribir "El doble de la suma es: ",resultado;// SALIDA
